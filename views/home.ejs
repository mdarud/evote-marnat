    <div id="Vote">
        <h5 style=
        "font-size: 5vw; 
        font-family: 'cocogoose'; 
        color: black;
        text-align: center;
        margin-top: 1rem;
        margin-bottom: 1rem;">
            AYO MEMILIH
        </h5>
        <div style="background-color: white;">
            <div class="container-fluid"">
                <div class="row">
                    <div class="col-md-6">
                        <form action="/users/" method="POST" style="margin: 5vw 3vw 5vw 3vw;">
                            <% include ./partials/messages %>
                            <div class="form-group">
                            <label for="Status">Status</label>
                            <select class="form-control" id="selectStatus">
                                <option value="1">Mahasiswa</option>
                                <option value="2">Alumni</option>
                            </select>
                            </div>
                            <div class="form-group NRP">
                                <label for="NRP">NRP</label>
                                <input
                                    type="nrp"
                                    id="nrp"
                                    name="nrp"
                                    class="form-control"
                                    placeholder="Masukkan NRP"
                                    value="<%= typeof nrp != 'undefined' ? nrp : '' %>"
                                />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input
                                        type="email"
                                        id="email"
                                        name="email"
                                        class="form-control"
                                        placeholder="Masukkan E-mail"
                                    value="<%= typeof email != 'undefined' ? email : '' %>"
                                />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input
                                    type="password"
                                    id="token"
                                    name="token"
                                    autocomplete="off"
                                    class="form-control"
                                    placeholder="Masukkan Token Rahasia"
                                    value="<%= typeof token != 'undefined' ? token : '' %>"
                                />
                            </div>
                            <button type="submit" style="width: 100%;" class="btn btn-primary">Masuk</button>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <img class="d-block w-100" style="padding: 5vw;" src="https://i.ibb.co/zszVcM9/Artboard-46.png" alt>
                    </div>
                </div>
            </div>
        </div>
    </div>
